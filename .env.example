# 应用配置
PORT=3000
NODE_ENV=production

# 文件上传配置
UPLOAD_DIR=./uploads
DATA_DIR=./data
MAX_FILE_SIZE=50000000
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,png,jpg,jpeg,gif

# LLM配置
LLM_PROVIDER=deepseek
LLM_API_KEY=your_deepseek_api_key_here

# OpenAI API配置（用于Whisper音频转录）
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# 数据库配置 - PostgreSQL
# 使用Railway时，设置DATABASE_URL即可
DATABASE_URL=

# 本地开发时，可以使用以下配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=knowledge_extractor
DB_USER=postgres
DB_PASSWORD=postgres

# ScrapeOps配置（网页爬虫降级方案）
SCRAPEOPS_API_KEY=your_scrapeops_api_key_here

# Whisper音频转录配置
WHISPER_ENABLED=true
WHISPER_LANGUAGE=zh
WHISPER_TIMEOUT=300
WHISPER_MAX_FILE_SIZE=25000000

# 视频下载配置
VIDEO_DOWNLOAD_TIMEOUT=300
VIDEO_MAX_SIZE=500000000
AUDIO_QUALITY=5
