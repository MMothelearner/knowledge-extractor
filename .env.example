# 应用配置
PORT=3000
NODE_ENV=production

# 文件上传配置
UPLOAD_DIR=./uploads
DATA_DIR=./data
MAX_FILE_SIZE=50000000
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,png,jpg,jpeg,gif

# LLM配置
LLM_PROVIDER=deepseek
LLM_API_KEY=your_deepseek_api_key_here

# 数据库配置 - PostgreSQL
# 使用Railway时，设置DATABASE_URL即可
DATABASE_URL=

# 本地开发时，可以使用以下配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=knowledge_extractor
DB_USER=postgres
DB_PASSWORD=postgres
